@{
    ViewData["Title"] = "DisplayMovie";
}

@model List<Movies>

<table class="table table-striped table-bordered table-hover table-rounded">
    <thead class="fw-bold" style="background-color: steelblue; color: white;">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Copied to Plex</td>
            <td>Notes</td>

            <td></td>
            <td></td>
        </tr>
    </thead>

    @foreach (var movie in Model)
    {
        <tbody class="table-light">
            <tr>
                <td>@movie.Category.CategoryName</td>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@movie.Edited</td>
                <td>@movie.LentTo</td>
                <td>@movie.CopiedToPlex</td>
                <td>@movie.Notes</td>

                <td class="align-middle"><a class="btn btn-primary" style="border: none; background-color: steelblue; color: white;" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a></td>
                <td class="align-middle"><a class="btn btn-primary" style="border: none; background-color: #D2042D; color: white;" asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a></td>
            </tr>
        </tbody>
    }
</table>