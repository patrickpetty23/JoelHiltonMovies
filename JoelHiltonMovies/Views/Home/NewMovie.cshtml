@model Movies

@{
    ViewData["Title"] = "NewMovie";
}

<h1>Add New Movie</h1>

<form method="post">
    <input type="hidden" asp-for="MovieId"/>

    <div class="form-group">
        <label asp-for="CategoryId">Category:<span style="color: red;">*</span></label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">Select a Category</option>
            @foreach (Categories cat in ViewBag.Categories)
            {
                <option value="@cat.CategoryId">@cat.CategoryName</option>
            }
        </select>
    </div>
    
    <div class="form-group">
        <label asp-for="Title">Title:<span style="color: red;">*</span></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year">Year:<span style="color: red;">*</span></label>
        <input asp-for="Year" class="form-control" type="number" min="1888"/>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" class="form-control">
            <option value="">Select a Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited:<span style="color: red;">*</span></label>
        <select asp-for="Edited" class="form-control">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied To Plex:<span style="color: red;">*</span></label>
        <select asp-for="CopiedToPlex" class="form-control">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>